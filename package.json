{
  "name": "microplum",
  "version": "0.1.0",
  "description": "Library that provide persistence layer of communication between microservices.",
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "node ./node_modules/.bin/gulp",
    "build": "node ./node_modules/.bin/gulp build",
    "clean": "node ./node_modules/.bin/gulp clean",
    "test": "node ./node_modules/.bin/gulp test",
    "winfix": "ln -s node_modules .build/node_modules && ln -s package.json .build/package.json",
    "deploy-appsync": "serverless deploy-appsync",
    "update-appsync": "serverless update-appsync",
    "delete-appsync": "serverless delete-appsync",
    "deploy": "serverless deploy && npm run update-appsync"
  },
  "repository": "https://github.com/tgorka/microplum.git",
  "author": "Tomasz Gorka <tomasz@gorka.org.pl>",
  "license": "MIT",
  "dependencies": {
    "jsonpath": "^1.0.0",
    "lodash": "^4.17.4",
    "seneca": "3.3.0",
    "seneca-amqp-transport": "2.1.0",
    "source-map-support": "^0.4.15"
  },
  "devDependencies": {
    "@types/jsonpath": "^0.2.0",
    "@types/lodash": "^4.14.68",
    "@types/node": "^9.6.2",
    "@types/seneca": "2.1.6",
    "gulp": "^3.9.1",
    "serverless": "^1.26.1",
    "serverless-appsync-plugin": "0.0.7",
    "serverless-plugin-typescript": "^1.1.5",
    "servicelychee": "git+https://github.com/tgorka/servicelychee.git",
    "typescript": "^2.4.1"
  }
}
